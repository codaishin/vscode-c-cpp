{
	// General Settings
	"files.trimTrailingWhitespace": true,
	"files.insertFinalNewline": true,
	"editor.formatOnSave": true,
	"editor.tabSize": 2,
	"editor.insertSpaces": false,
	"editor.rulers": [
		79,
		99
	],
	// C/C++ Extension
	"C_Cpp.default.cStandard": "c99",
	// C/C++ Clang Command Adapter
	"clang.cflags": [
		"--std=c99",
	]
}
