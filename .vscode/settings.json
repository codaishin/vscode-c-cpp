{
	// General Settings:
	"files.trimTrailingWhitespace": true,
	"files.insertFinalNewline": true,
	"editor.formatOnSave": true,
	"editor.tabSize": 2,
	"editor.insertSpaces": false,
	"editor.rulers": [
		79,
		99
	],
	// C/C++ Extension (intellisense, formatting, debugger):
	"C_Cpp.default.cStandard": "c99",
	"C_Cpp.default.cppStandard": "c++98",
	// C/C++ Clang Command Adapter (linting):
	"clang.cflags": [
		"--std=c99",
	],
	"clang.cxxflags": [
		"--std=c++98",
	],
	// Python example settings (for Python extension):
	"python.defaultInterpreterPath": ".env/bin/python",
	"python.formatting.provider": "black",
	"python.formatting.blackArgs": [
		"--line-length=79",
	],
	"python.linting.enabled": true,
	"python.linting.mypyEnabled": true,
	"python.linting.mypyArgs": [
		"--follow-imports=silent",
		"--show-column-numbers",
	],
	"python.linting.pylintEnabled": true,
	"python.linting.pylintArgs": [
		"--enable=all",
		"--max-line-length=79",
	],
	"python.linting.pylintCategorySeverity.warning": "Error",
	"python.linting.pylintCategorySeverity.convention": "Error",
	"python.linting.pylintCategorySeverity.refactor": "Error",
	"[python]": {
		"editor.codeActionsOnSave": {
			"source.fixAll": true,
			"source.organizeImports": true
		},
		"editor.tabSize": 4,
		"editor.insertSpaces": true,
	},
	// javasctipt/typescript:
	// Formatting handled by ESLint extensionsion, which
	// is configured with .elsintrc.json
	// an example .eslintrc.json is provided
	"[javascript]": {
		"editor.insertSpaces": false,
		"editor.tabSize": 2,
	},
	"[typescript]": {
		"editor.insertSpaces": false,
		"editor.tabSize": 2,
	},
}
