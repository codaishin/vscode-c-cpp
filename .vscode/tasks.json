{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "compile debug",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "--std=c++98",
                "-g",
                "${file}",
                "-o",
                "debug.out"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}
